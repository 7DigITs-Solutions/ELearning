<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="The Assignment Operators"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/assignmentoperators"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="When we perform any operation, generally we assign the result of the expression to a variable. For that purpose, we use a normal assignment (=)."
                        android:textSize="15sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Following table show the assignment operators supported by Java language:"
                        android:textSize="15sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="650dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/txt1_lev2_lesson1"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="Example"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="The following program is a simple example that demonstrates the assignment operators. "
                        android:textSize="15sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="660dp"
                        android:src="@drawable/txt1_lev2_lesson1a"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="This will produce the following result: "
                        android:textSize="15sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/lightgray2"
                        android:layout_margin="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="c = a + b = 30"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/gray"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c += a  = 40"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c -= a = 30"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c *= a = 300"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c /= a = 1"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c %= a  = 5"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/c_2_20"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c >>= 2 = 5"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c >>= 2 = 1"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/c_a_0"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c ^= a   = 10"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="c |= a   = 10"
                            android:layout_gravity="left"
                            android:textSize="15sp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/gray"
                            android:layout_marginBottom="20dp"/>






                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>